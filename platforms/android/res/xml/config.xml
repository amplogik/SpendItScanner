<?xml version='1.0' encoding='utf-8'?>
<widget id="com.spendit.spenditscanner" version="1.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Accelerometer">
        <param name="android-package" value="org.apache.cordova.devicemotion.AccelListener" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>SpendItScanner</name>
    <description>
        Application for users of SpendIt.com.  Consumers can show proof of purchase for special offers, redeem coupons, redeem rewards, and more.  Merchants may scan codes to verify members and purchaes.
    </description>
    <author email="logik@darkdance.org" href="http://www.spendit.com">
	Kim McCann for McCann Consulting
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
